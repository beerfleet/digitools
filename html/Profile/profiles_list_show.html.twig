{% extends 'base_with_right_sidebar.html.twig' %}

{% block title %}Digi Tools - ESL{% endblock title %}

  {% block main_column %}
    <section id="users_list">

      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>Admin</th>
            <th>Enabled</th>
            <th> </th>
          </tr>
        </thead>
        <tbody>
          {% for usr in users_list %}
            <tr>
              <td>{{ usr.username }}</td>
              <td> <input type="checkbox" data-user-id="{{ usr.id }}" {{ usr.isAdmin() == 1 ? "checked='checked'" }} /> </td>
              <td> <input type="checkbox" data-user-id="{{ usr.id }}" {{ usr.isEnabled() == 1 ? "checked='checked'" }} /> </td>

              <td> <a href=""> edit </a> </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

    </section>
  {% endblock main_column %}