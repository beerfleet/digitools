{% extends 'base_with_right_sidebar.html.twig' %}

{% set app = globals.app %}

{% block title %}
  Digi Tools - Toon mijn profiel
{% endblock title %}

{% block main_column %}  
  <section id="registration">
    <div class="container form">
      <h1>Mijn Profiel</h1>
      {% set url = app.urlFor('profile_edit') %}      
      {% include 'Profile/profile_form_template.html.twig' %}
    </div>
  </section>
{% endblock main_column %}

{% block sidebar %}      
  <nav id="reg-menu">
    <ul class="nav nav-tabs">
      {% set user = globals.user %}
      {% if user.isAdmin() %}
        <li> <a href="{{ app.urlFor('admin_list_profiles') }}">Profielen</a> </li>
        {% endif %}
      <li><a href="{{ app.urlFor('user_logoff') }}">Afmelden</a></li>
    </ul>
  </nav>       
{% endblock sidebar %}