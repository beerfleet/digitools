<section id="search_by_tags">
  <div class="container form outer_frame">
    <h1>Filter getagd</h1>
    <form action="{{ app.urlFor('logs_per_tags') }} " method="POST" novalidate>
      <div id="search-logic" >
        <div class="form-control">
          <input type="radio" name="search_logic" value="and" checked> Alle
          <input type="radio" name="search_logic" value="or"> Een van
        </div>
      </div>
      <div class="tag-collection">
        <div class="tag-bag">          
          {% include 'Logbook/show_tags_selectable.html.twig' %}
        </div>
      </div>
      <div class="form-group spacing">
        <ul>
          <li><input class="form-control btn submit action-button" type="submit" id="verzend" name="register" value="Toon" /></li>
        </ul>
      </div>
    </form>
  </div>
</section>

<section id="log_list">
  <div class="container outer_frame">
    <h1>Mijn entries</h1>
    <input type="text" class="form-control search_box" placeholder="search here" />
    {% include 'Logbook/show_log_entries.html.twig' %}
  </div>
</section>