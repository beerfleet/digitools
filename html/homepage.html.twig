{% extends 'base_with_right_sidebar.html.twig' %}

{% block title %}Digi Tools{% endblock title %}


  {% block main_column %}
    
    <div class="container welcome">
      {% if globals.user is defined and globals.user is not null %}
      {% set user = globals.user %}
        <h1>{{ globals.user.username }} is aangemeld</h1>
        {% if user.isAdmin() %}
          <span class="status">als admin</span>
        {% else %}
          <span class="status">als user</span>
        {% endif %}
      {% else %}
        <h1>Hello</h1>
      {% endif %}
    </div>
    
    <section class="container welcome cf">
      
    </section>
    
  {% endblock main_column %}


{% block extrajs %}
  <script src="js/main.js"></script>
{% endblock extrajs %}
