{% extends 'base_with_right_sidebar.html.twig' %}

{% block title %}
  Digi Tools - Nieuwe Log
{% endblock title %}

{% block main_column %}

  {% set app = globals.app %}   

  <section id="registration">
    <div class="container form">
      <h1>Log Entry</h1>      
      <form action="{{ app.urlFor('log_new') }}" method="POST" novalidate>
        <div class="tag-collection">        
          <div class="controls">
            <div class="nieuwe-tag action-button"><a href="#">+ Nieuwe tag</a></div>
          </div>
          <div class="tag-bag">          
            {% include 'Logbook/show_tags_selectable.html.twig' %}
          </div>
        </div>

        <div class="form-group">          
          <textarea class="form-control" rows="8" id="log_entry" name="log_entry" placeholder="LEGE ENTRY " value="{% if app.request.isPost() %}{{app.request.post('log_entry')}}{% endif %}" /></textarea>
        </div>
        <div class="form-group spacing">
          <ul>
            <li><input class="form-control btn submit action-button" type="submit" id="verzend" name="register" value="Maak" /></li>            
          </ul>
        </div>

      </form>
    </div>

    <section id="search_by_tags">
      <div class="container form">
        <h1>Filter getagd</h1>
        <form action="{{ app.urlFor('logs_per_tags') }} " method="POST" novalidate>
          <div class="tag-collection">
            <div class="tag-bag">
              {% include 'Logbook/show_tags_selectable.html.twig' %}
            </div>
          </div>
          <div class="form-group spacing">
            <ul>
              <li><input class="form-control btn submit action-button" type="submit" id="verzend" name="register" value="Toon" /></li>
            </ul>
          </div>  
        </form>
      </div>
    </section>

    <section id="log_list">
      <div class="container">      
        <h1>Mijn entries</h1>
        <input type="text" class="form-control search_box" placeholder="search here" />
        {% include 'Logbook/show_log_entries.html.twig' %}
      </div>
    </section>
  </section>
{% endblock main_column %}

{% block extrajs %}
  <script src="../js/list.js"></script>
{% endblock extrajs %}