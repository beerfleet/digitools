{% extends 'base_with_bottom_menu.html.twig' %}

{% block title %} Digitools - New Todo {% endblock title %}

{% block main_column %}
  {% set app = globals.app %}
  <section id="registration">
    <h1>New Todo Item</h1>
    <form action="{{ app.urlFor('todo_new') }}" method="POST">
      <input class="form-control" type="text" name="title" placeholder="Title">
      <input class="form-control" type="date" name="tododate" placeholder="Due date" readonly="readonly">      
    </form>
  </section>
{% endblock %}

{% block extrajs %}
  <script type="text/javascript">

    $('<input>').on('click', function () {
      alert('clicked me');
    });

  </script>
{% endblock extrajs %}