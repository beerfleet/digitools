{% extends 'homepage.html.twig' %}

{% block title %} Digi Tools - ESL - Toon klantdetails {% endblock title %}

{% block main_column %}
  {% set app = globals.app %}
  <section id="registration">

    <h1>Details van {{ store.storename }}</h1>

    <div class="context">
      <a class="btn form-control" href="{{ app.urlFor('esl_sheet_show') }}">Terug naar lijst</a>        
    </div>

    <div class="field">
      <h3>Klantnummer</h3>
      <div>{{ store.synergie }}</div>
    </div>

    <div class="field">
      <h3>Ip-adressen</h3>
      <div>{{ store.ip }}</div>
    </div>

    <div class="field">
      <h3>Softwareversies</h3>
      <div>{{ store.softwareversion }}</div>
    </div>

    <div class="field">
      <h3>Contactgegevens</h3>
      <div>{{ store.contact }}</div>
    </div>

    <div class="field">
      <h3>E-mail adres</h3>
      <div>{{ store.email }}</div>
    </div>

    <div class="field">
      <h3>Lokatie van de afbeeldingen</h3>
      <div>{{ store.picurl }}</div>
    </div>    

    <div class="field">
      <h3>Groep</h3>
      <div>{{ store.storegroup.groupname }}</div>
    </div>    

    <div class="field">
      <h3>Postcode</h3>
      <div>{{ store.postcode.postcode }} {{ store.postcode.town }}</div>
    </div>

    <div class="field">
      <h3>Contract</h3>
      <div>{{ store.contract.company }}</div>
    </div>   

    <div class="field">
      <h3>Contracttype</h3>
      <div>{{ store.contracttype.typename }}</div>
    </div>   

    <div class="field">
      <h3>Backoffice</h3>
      <div>{{ store.backoffice.backofficename }}</div>
    </div> 

  </section>
{% endblock main_column %}