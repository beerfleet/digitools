{% extends 'base_with_bottom_menu.html.twig' %}

{% block title %} Digitools - New Todo {% endblock title %}

{% block extracss %}
  {% include 'Common/include_jquery_ui_css.html.twig' %}  
{% endblock extracss %}

{% block main_column %}
  {% set app = globals.app %}
  <section id="registration">
    <h1>Maak nieuwe</h1>
    <form action="{{ app.urlFor('todo_new') }}" method="POST">
      <div class="row form-group">
        <div class="col-sm-12">
          <input class="form-control" type="text" name="title" id="title" placeholder="Titel">
        </div>
      </div>
      <div class="row form-group">
        <div class="col-sm-6">
          <input class="datepick form-control" type="date" name="tododate" placeholder="Einddatum" readonly="readonly">
        </div>
        <div class="col-sm-6">
          <input class="timepick form-control" type="date" name="todotime" placeholder="Einduur" readonly="readonly">
        </div>
      </div>

      <div class="form-group">
        <label for="priority">Prioriteit</label>
        <select class="form-control" name="priority">
          {% for priority in priorities %}
            <option value="{{ priority.id }}">{{ priority.description }}</option>
          {% endfor %}
        </select>
      </div>

      <div class="form-group content-control">
        <ul>            
          <li><input class="form-control btn submit action-button" type="submit" id="verzend" name="register" value="Bewaar" /></li>
          <li><a href="{{ app.urlFor('todo_home') }}" class="form-control btn submit action-button">Overzicht</a></li>
        </ul>
      </div>
    </form>
  </section>
{% endblock %}

{% block extrajs %}  
  {% include 'Common/include_jquery_ui_js.html.twig' %}
  <script src="../js/todo.js"></script>
{% endblock extrajs %}