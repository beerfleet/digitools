{% extends 'base.html.twig' %}

{% block title %}
  Digi Tools - Wijzig Log
{% endblock title %}

{% block content %}

  {% set app = globals.app %}   

  <section id="registration">
    <div class="container form">
      <h1>Log Entry</h1>      
      <form action="{{ app.urlFor('log_edit_store', {'id': log.get_id} ) }}" method="POST" novalidate>
        <div id="log_id" hidden="true"> {{ log.get_id }} </div>
        <div class="form-group">          
          <textarea class="form-control" rows="8" id="log_entry" name="log_entry" value="{% if app.request.isPost() %}{{app.request.post('log_entry')}}{% endif %}">{{ log.get_entry }} </textarea>
        </div>
        <div class="form-group spacing">
          <ul>
            <li><input class="form-control btn submit" type="submit" id="verzend" name="register" value="Opslaan" /></li>            
          </ul>
        </div>
      </form>
    </div>
  </section> 
{% endblock content %}