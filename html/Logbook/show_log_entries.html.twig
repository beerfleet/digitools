{# empty Twig template #}
<section id="log_entries_list">
  {% if log_list %}

    {% for log_item in log_list %}
      <div class="outer_frame">
        <div class="floatright editeer"><a href="{{ app.urlFor('log_edit', {"id":log_item.id}) }}">Wijzig</a></div>
        <h4 class="item_created"> {{ log_item.created|date('Y-m-d H:i') }} </h4>
        <div class="item_entry_box"> {{ log_item.entry }} </div>
      </div>
    {% endfor %}

  {% else %}
    <div class="container">
      <h2>NO LOGS FOUND</h2>
    </div>    
  {% endif %}
</section>